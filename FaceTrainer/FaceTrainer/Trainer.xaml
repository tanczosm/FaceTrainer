<Page x:Class="FaceTrainer.Trainer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FaceTrainer"
      mc:Ignorable="d" 
      d:DesignHeight="545.455" d:DesignWidth="714.115"
      Title="Trainer">

    <Grid Margin="10">
        <Label x:Name="label" Content="Try to Keep Up!" HorizontalAlignment="Left" Margin="1,1,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imgCamera" HorizontalAlignment="Left" Height="480" Margin="1,63,0,-18" VerticalAlignment="Top" Width="640" Stretch="UniformToFill"/>
        <Button x:Name="btnStart" Content="Start!" HorizontalAlignment="Left" Margin="542,11,0,0" VerticalAlignment="Top" Width="99" Background="#FF3BDA75" FontSize="18" Click="btnStart_Click"/>
        <ProgressBar x:Name="progressTrainer" HorizontalAlignment="Left" Height="14" Margin="0,44,0,0" VerticalAlignment="Top" Width="641"/>
        
    </Grid>
</Page>
