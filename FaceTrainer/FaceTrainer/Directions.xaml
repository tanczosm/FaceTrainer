<Page x:Class="FaceTrainer.Directions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FaceTrainer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="588.516"
      Title="Directions">

    <Grid Margin="10">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="96" Width="549" FontSize="18"><Run Text="Greetings!   We need to take a few pictures of your face.  Try to match your expression to the emoji you see on the screen."/><LineBreak/><Run/><LineBreak/><Run Text="Enter your school network id"/></TextBlock>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="28" Margin="10,151,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" FontSize="18" TextChanged="txtUserName_TextChanged"/>
        <Button x:Name="btnStart" Content="Next" HorizontalAlignment="Left" Margin="305,151,0,0" VerticalAlignment="Top" Width="99" Background="#FF3BDA75" FontSize="18" IsEnabled="False"/>

    </Grid>
</Page>
